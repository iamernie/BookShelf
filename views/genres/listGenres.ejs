<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/header',{ title: 'Books - Genres'}) %>
  </head>
  <body>
    <%- include('../navbar') %>
    <!-- Adjust the path to your navbar partial -->

    <div class="container mt-4">
      <h2 class="mb-3">Genres List</h2>
      <a href="/genres/add" class="btn btn-success mb-4">Add New Genre</a>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% genres.forEach(function(genre) { %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <a
                href="/genres/<%= genre.id %>"
                class="btn btn-sm btn-primary"
                >Edit</a
              >
              <form
                action="/genres/<%= genre.id %>?_method=DELETE"
                method="post"
                style="display: inline"
              >
                <button type="submit" class="btn btn-sm btn-danger">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
