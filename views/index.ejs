<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Tracking Application</title>
    <!-- Bootstrap CSS CDN -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />

    <style>
      body {
        background-color: #f4f4f4;
      }
      .jumbotron {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .book-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
      }
      .book-card {
        background: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .book-card:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      }
      .book-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }
      .book-info {
        padding: 10px;
      }
      .section-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-top: 40px;
      }
    </style>
  </head>
  <body>
    <%- include('navbar') %>

    <div class="container my-4">
      <header class="jumbotron text-center">
        <h1 class="display-4">Welcome to BookTracker!</h1>
        <p class="lead">Your personal library management system.</p>
        <hr class="my-4" />
        <p>
          Track, organize, and discover your favorite books, authors, and
          series.
        </p>
        <a class="btn btn-primary btn-lg" href="books" role="button"
          >Explore Books</a
        >
      </header>

      <!-- Current Book Section -->
      <section>
        <h2 class="section-title">Current Read</h2>
        <div class="book-grid">
          <% if (currentBook) { %>
          <div class="book-card">
            <img
              class="book-image"
              src="<%= currentBook.coverImageUrl %>"
              alt="Book Cover"
            />
            <div class="book-info">
              <h5 class="book-title"><%= currentBook.title %></h5>
              <!-- Other book details like author, rating, etc. -->
            </div>
          </div>
          <% } else { %>
          <p>No current book selected.</p>
          <% } %>
        </div>
      </section>

      <!-- Next Up Books Section -->
      <section>
        <h2 class="section-title">Next Up</h2>
        <div class="book-grid">
          <% nextUpBooks.forEach(function(book) { %>
          <div class="book-card">
            <img
              class="book-image"
              src="<%= book.coverImageUrl %>"
              alt="Book Cover"
            />
            <div class="book-info">
              <h5 class="book-title"><%= book.title %></h5>
              <!-- Other book details like author, rating, etc. -->
            </div>
          </div>
          <% }) %>
        </div>
      </section>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
