<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Authors - Book Tracker</title>
    <!-- Bootstrap CSS CDN -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
  </head>
  <body>
    <%- include('../navbar') %>
    <!-- Include the navbar partial -->

    <div class="container mt-4">
      <h2 class="mb-3">Authors List</h2>
      <a href="/authors/add" class="btn btn-success mb-3">Add New Author</a>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <!-- Other columns if necessary (like 'Number of Books', etc.) -->
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% authors.forEach(function(author) { %>
          <tr>
            <td><%= author.name %></td>
            <!-- Other columns data -->
            <td>
              <a
                href="/authors/edit/<%= author.id %>"
                class="btn btn-sm btn-primary"
                >Edit</a
              >
              <form
                action="/authors/<%= author.id %>?_method=DELETE"
                method="post"
                style="display: inline"
              >
                <button type="submit" class="btn btn-sm btn-danger">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
