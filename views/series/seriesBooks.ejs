<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Series Books - Book Tracker</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <!-- Add any other custom styles or scripts here -->
    <style>
      .card-container {
        padding: 10px;
      }
      .book-card {
        position: relative; /* Needed for absolute positioning of the edit button */
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 10px;
        overflow: hidden;
      }
      .book-card:hover {
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
      }
      .book-image {
        width: 100%;
        height: auto;
        object-fit: cover;
      }
      .book-info {
        padding: 10px;
      }
      .book-title,
      .book-author,
      .book-series,
      .book-status {
        margin-bottom: 5px; /* Reduced bottom margin */
        line-height: 1.2; /* Adjust line height for tighter text */
      }
      .edit-btn {
        position: absolute;
        top: 10px; /* Position from the top of the card */
        left: 10px; /* Position from the right of the card */
        opacity: 0; /* Initially hidden */
        transition: opacity 0.3s ease; /* Smooth transition for the opacity */
      }
      .book-card:hover .edit-btn {
        opacity: 1; /* Show the button on hover */
      }
      .book-image-container {
        position: relative;
      }

      .checkmark-container {
        position: absolute;
        top: 10px;
        right: 10px;
        color: rgb(163, 243, 163); /* Green color for the check mark */
        font-size: 24px; /* Adjust size as needed */
      }
    </style>
  </head>
  <body>
    <%- include('../navbar') %>
    <!-- Include the navbar partial -->

    <div class="container mt-4">
      <h2 class="mb-3">Books in Series</h2>

      <div class="row">
        <% books.forEach(function(book) { %>
        <div class="col-md-4 mb-4">
          <div
            class="card book-card"
            style="cursor: pointer"
            data-toggle="modal"
            data-target="#bookDetailsModal"
            data-book="<%= JSON.stringify(book) %>"
            onclick="showBookDetails(this)"
          >
            <img
              class="card-img-top book-image"
              src="<%= book.coverImageUrl %>"
              alt="Book Cover"
            />
            <% if (book.status && book.status.name === 'Done') { %>
            <div class="checkmark-container">
              <i class="fas fa-check-circle"></i>
              <!-- Using Font Awesome -->
              <!-- Or use a Unicode character: <span>&#10004;</span> -->
            </div>
            <% } %>

            <div class="card-body book-info">
              <h5 class="card-title book-title"><%= book.title %></h5>
              <p class="book-series">
                <% if (book.series) { %>
                <a href="/series/<%= book.series.id %>/books"
                  ><%= book.series.title %></a
                >
                Book #<%= book.bookNum %> <% } else { %> No Series <% } %>
              </p>
              <p class="book-author">
                Author: <%= book.author ? book.author.name : 'Unknown' %>
              </p>

              <p class="book-status">
                Status: <%= book.status ? book.status.name : 'N/A' %><%=
                book.status && book.status.name === 'Done' ? ' âœ“' : '' %>
              </p>
              <!-- ... other book details and actions ... -->
              <!-- Hover-activated Edit Button -->
              <a
                href="/books/edit/<%= book.id %>"
                class="btn btn-primary edit-btn"
                >Edit</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <% if (books.length === 0) { %>
      <p>No books found in this series.</p>
      <% } %>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
