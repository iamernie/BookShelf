<div class="col-xl-1 col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
    <div class="card book-card " style="cursor: pointer" onclick="showBookDetails('<%= book.id %>')" data-book-id="<%= book.id %>">
                <!-- Unreleased banner -->
                <% if (new Date(book.releaseDate) > new Date()) { %>
                    <div class="unreleased-status">Unreleased</div>
                <% } %>
        <div class="book-image-container">
            <img class="card-img-top book-image" src="<%= book.coverImageUrl %>" alt="Book Cover"> 
 
        </div>
            <!-- Status banner -->
            <% if (book.status) { %>
                <div class="status-banner <%= book.status.name.toLowerCase() %>-status">
                    <%= book.status.name %>
                </div>
            <% } %>
                <!-- Title -->
            <h5 class="card-title book-title"><%= book.title %></h5>
            
            <!-- Series OR Book Number -->
            <p class="book-series">
                <% if(book.fromSeries) { %>
                       <strong> Book <%= book.bookNum %> </strong>
                <% } else { %>
                        <% if (book.series) { %>
                            <a href="/series/<%= book.series.id %>/books"><%= book.series.title %></a>
                        <% } else { %>
                            No Series
                        <% } %>
                <% } %>
            </p>
            <p class="book-author">
                <% if(book.fromAuthor) { %>
                    <strong> Book <%= book.bookNum %> </strong>
             <% } else { %>
                        By: 
                        <% if (book.author && book.author.id) { %>
                            <a href="/authors/<%= book.author.id %>/books"><%= book.author.name %></a>
                        <% } else { %>
                            Unknown
                        <% } %>
                <% } %>
    </div>
  </div>
  