<!-- booksGrid.ejs -->
<style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
  
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
  
    th {
      background-color: #f2f2f2;
    }
  
    tr:nth-child(even) {
      background-color: #f9f9f9;
    }
  
    tr:hover {
      background-color: #eaeaea;
    }
  </style>

<h1>Books Table</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Series</th>
      <th>Narrator</th>
      <th>Status</th>
      <th>Start Reading Date</th>
      <th>Completed Date</th>
      <th>Release Date</th>
      <th>Rating</th>
      <th>Cover Image URL</th>
      <th>Book Number</th>
      <th>Format</th>
      <th>Summary</th>
      <th>Comments</th>
      <!-- Add other headers as needed -->
    </tr>
  </thead>
  <tbody>
    <% books.forEach(book => { %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author ? book.author.name : 'N/A' %></td>
        <td><%= book.series ? book.series.title : 'N/A' %></td>
        <td><%= book.narrator ? book.narrator.name : 'N/A' %></td>
        <td><%= book.status ? book.status.name : 'N/A' %></td>
        <td><%= book.startReadingDate ? book.startReadingDate.toDateString() : 'N/A' %></td>
        <td><%= book.completedDate ? book.completedDate.toDateString() : 'N/A' %></td>
        <td><%= book.releaseDate ? book.releaseDate.toDateString() : 'N/A' %></td>
        <td><%= book.rating %></td>
        <td><%= book.coverImageUrl %></td>
        <td><%= book.bookNum %></td>
        <td><%= book.Format ? book.Format.name : 'N/A' %></td>
        <td><%= book.summary %></td>
        <td><%= book.comments %></td>
        <!-- Add other fields as needed -->
      </tr>
    <% }) %>
  </tbody>
</table>

<div class="pagination">
  <% for(let i = 1; i <= totalPages; i++) { %>
    <a href="/books/grid?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
  <% } %>
</div>
