<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Book - Book Tracker</title>
    <!-- Bootstrap CSS CDN -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <%- include('../scripts/coverhider') %> <%-
    include('../partials/bookstyles') %>
  </head>
  <body>
    <%- include('../navbar') %>

    <div class="container">
      <h2 class="form-title">Add New Book</h2>
      <form action="/books" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title:</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          />
        </div>

        <div class="form-group">
          <label for="authorId">Author:</label>
          <select class="form-control" id="authorId" name="authorId">
            <option value="">Select an Author</option>
            <% authors.forEach(function(author) { %>
            <option value="<%= author.id %>"><%= author.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label for="seriesId">Series:</label>
          <select class="form-control" id="seriesId" name="seriesId">
            <option value="">Select a Series (Optional)</option>
            <% series.forEach(function(serie) { %>
            <option value="<%= serie.id %>"><%= serie.title %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label for="rating">Book #:</label>
          <input
            type="number"
            class="form-control"
            id="bookNun"
            name="bookNum"
            min="1"
            max="100"
          />
        </div>
        <div class="form-group">
          <label for="coverImageUrl">Cover Image URL:</label>
          <input
            type="text"
            id="coverImageUrl"
            name="coverImageUrl"
            placeholder="http://example.com/image.jpg"
          />

          <!-- Input for Uploading Cover Image -->
          <label for="coverImageFile">Upload Cover Image:</label>
          <input
            type="file"
            id="coverImageFile"
            name="coverImageFile"
            accept="image/*"
          />
        </div>
        <div class="form-group">
          <label for="formatIds">Formats:</label>
          <select class="form-control" id="formatIds" name="formatIds">
            <% formats.forEach(function(format) { %>
            <option value="<%= format.id %>"><%= format.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label for="summary">Summary:</label>
          <textarea
            class="form-control"
            id="summary"
            name="summary"
            rows="3"
          ></textarea>
        </div>

        <div class="form-group">
          <label for="releaseDate">Release Date:</label>
          <input
            type="date"
            class="form-control"
            id="releaseDate"
            name="releaseDate"
          />
        </div>

        <div class="form-group">
          <label for="startReadingDate">Start Reading Date:</label>
          <input
            type="date"
            class="form-control"
            id="startReadingDate"
            name="startReadingDate"
          />
        </div>

        <div class="form-group">
          <label for="completedDate">Completed Date:</label>
          <input
            type="date"
            class="form-control"
            id="completedDate"
            name="completedDate"
          />
        </div>

        <div class="form-group">
          <label for="rating">Rating:</label>
          <input
            type="number"
            class="form-control"
            id="rating"
            name="rating"
            min="1"
            max="5"
          />
        </div>

        <div class="form-group">
          <label for="statusId">Status:</label>
          <select class="form-control" id="statusId" name="statusId">
            <% statuses.forEach(function(status) { %>
            <option value="<%= status.id %>"><%= status.name %></option>
            <% }) %>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">Add Book</button>
      </form>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
