<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header', { title: 'Books - Book Tracker'}) %>
  <link rel="stylesheet" href="/styles/bookCard.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
  <style>
    /* ... Your existing styles ... */
    
    .collapse-header {
      cursor: pointer;
      background-color: #007bff;
      color: white;
      padding: 0.5rem 1rem;
      margin-bottom: 1rem;
      border-radius: 0.25rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .collapse-header .title {
      font-weight: bold;
      user-select: none;
    }

    .collapse-header .toggle-icon {
      font-size: 1.25rem;
    }

    .collapse.show .toggle-icon:before {
      content: '\f077'; /* FontAwesome arrow up */
    }

    .collapse:not(.show) .toggle-icon:before {
      content: '\f078'; /* FontAwesome arrow down */
    }
  </style>
</head>
<body>
  <%- include('../navbar') %>
  <%- include('../partials/bookcardModal') %>

  <div class="container mt-4">
    <h2 class="mb-3">Books List</h2>

    <!-- Collapsible section for "Next Up" -->
    <div class="collapse-header" data-bs-toggle="collapse" data-bs-target="#nextUpSection">
      <span class="title">Next Up</span>
      <span class="toggle-icon fas fa-chevron-down"></span>
    </div>
    <div id="nextUpSection" class="collapse show">
      <!-- Content for "Next Up" books -->
      <div class="row">
        <% nextUpBooks.forEach(function(book) { %>
          <%- include('../partials/bookCard', { book: book }) %>
        <% }) %>
      </div>
    </div>

    <!-- Collapsible section for "All Books" -->
    <div class="collapse-header" data-bs-toggle="collapse" data-bs-target="#allBooksSection">
      <span class="title">All Books</span>
      <span class="toggle-icon fas fa-chevron-down"></span>
    </div>
    <div id="allBooksSection" class="collapse show">
      <!-- Content for "All Books" -->
      <div id="booksContainer" class="row">
        <% books.forEach(function(book) { %>
          <%- include('../partials/bookCard', { book: book }) %>
        <% }) %>
      </div>
    </div>

  </div>
  <%- include('../partials/footer') %>

  <script>
    // Optional JavaScript to toggle the chevron icon on collapse
    document.querySelectorAll('.collapse-header').forEach(header => {
      header.addEventListener('click', function() {
        this.querySelector('.toggle-icon').classList.toggle('fa-chevron-down');
        this.querySelector('.toggle-icon').classList.toggle('fa-chevron-up');
      });
    });
  </script>
</body>
</html>
